<Window x:Class="JMMServer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:JMMServer"
        Title="{Resx ResxName=JMMServer.Properties.Resources, Key=JMMServer}" Height="570" Width="550" Icon="/JMMServer;component/db.ico" WindowStartupLocation="CenterScreen" >

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/UI/UIStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

            <RoutedUICommand x:Key="ScanFolderCommand" Text="ScanFolderCommand" />

            <!-- userLanguageTemplate-->
            <DataTemplate x:Key="userLanguageTemplate">
                <StackPanel Orientation="Horizontal">
                    <Image Height="16" Width="16" Source="{Binding Path=FlagImage}" Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding Path=LanguageName}" />
                </StackPanel>
            </DataTemplate>

        </ResourceDictionary>

    </Window.Resources>

    <Window.CommandBindings>
       
        <CommandBinding Command="{StaticResource ScanFolderCommand}" Executed="CommandBinding_ScanFolder" />

    </Window.CommandBindings>

    <Grid>

        
        
        <Grid.ColumnDefinitions>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>

        <!-- top toolbar container -->
        <Border Style="{DynamicResource ToolbarBorderControlStyle}" Grid.Row="0" Background="FloralWhite">
            <StackPanel Orientation="Horizontal">
                <!-- Back -->
                <Button Name="btnToolbarShutdown" Margin="2,2,2,2" Style="{DynamicResource FlatButtonStyle}">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" >
                        <Image Height="16" Width="16" Source="/Images/32_Cancel.png" Margin="0,0,5,0"/>
                        <TextBlock VerticalAlignment="Center" Text="{Resx ResxName=JMMServer.Properties.Resources, Key=Toolbar_Shutdown}" Margin="0,0,5,0"/>
                    </StackPanel>
                </Button>
                <!-- About -->
                <Button Name="btnToolbarHelp" Margin="2,2,2,2" Style="{DynamicResource FlatButtonStyle}">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" >
                        <Image Height="16" Width="16" Source="/Images/32_info.png" Margin="0,0,5,0"/>
                        <TextBlock VerticalAlignment="Center" Text="{Resx ResxName=JMMServer.Properties.Resources, Key=Toolbar_About}" Margin="0,0,5,0"/>
                    </StackPanel>
                </Button>

                <!-- Logs -->
                <Button Name="btnLogs" Margin="2,2,2,2" Style="{DynamicResource FlatButtonStyle}">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" >
                        <Image Height="16" Width="16" Source="/Images/32_folder.png" Margin="0,0,5,0"/>
                        <TextBlock VerticalAlignment="Center" Text="{Resx ResxName=JMMServer.Properties.Resources, Key=Toolbar_Logs}" Margin="0,0,5,0"/>
                    </StackPanel>
                </Button>

                <!-- Admin Messages -->
                <Button Name="btnAdminMessages" Margin="2,2,2,2" Style="{DynamicResource FlatButtonStyle}"
                        Visibility="{Binding Source={x:Static local:ServerInfo.Instance}, Path=AdminMessagesAvailable, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" >
                        <Image Height="16" Width="16" Source="/Images/32_mail.png" Margin="0,0,5,0"/>
                        <TextBlock VerticalAlignment="Center" Text="{Resx ResxName=JMMServer.Properties.Resources, Key=Toolbar_Messages}" Margin="0,0,5,0"/>
                    </StackPanel>
                </Button>

                <!-- Language Selector -->
                <ComboBox Name="cboLanguages" Margin="2,2,2,2" HorizontalAlignment="Right"
                              ItemTemplate="{StaticResource userLanguageTemplate}"></ComboBox>


            </StackPanel>
        </Border>

        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Name="Scroller" Padding="0,0,0,0" Margin="0,2,0,85" Grid.RowSpan="2">
            <TabControl  Name="tabControl1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0" Width="{Binding ElementName=Scroller, Path=ViewportWidth}" >

                <!-- Actions tab-->
                <TabItem Header="{Resx ResxName=JMMServer.Properties.Resources, Key=Tab_Actions}" Visibility="{Binding Source={x:Static local:ServerState.Instance}, Path=ServerOnline, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel Orientation="Vertical" Margin="0,5,5,5">

                        <!-- Run Import -->
                        <Button HorizontalAlignment="Left" Name="btnRunImport" Margin="0,0,0,0" Style="{DynamicResource FlatButtonStyle}" Width="Auto">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" >
                                <Image Height="16" Width="16" Source="/Images/32_import.png" Margin="0,0,5,0"/>
                                <TextBlock VerticalAlignment="Center" Text="{Resx ResxName=JMMServer.Properties.Resources, Key=Actions_RunImport}" Margin="0,0,5,0"/>
                            </StackPanel>
                        </Button>

                        <!-- Remove Missing Files -->
                        <Button HorizontalAlignment="Left" Name="btnRemoveMissingFiles" Margin="0,0,0,0" Style="{DynamicResource FlatButtonStyle}" Width="Auto">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" >
                                <Image Height="16" Width="16" Source="/Images/32_import.png" Margin="0,0,5,0"/>
                                <TextBlock VerticalAlignment="Center" Text="{Resx ResxName=JMMServer.Properties.Resources, Key=Actions_RemoveMissing}" Margin="0,0,5,0"/>
                            </StackPanel>
                        </Button>

                        <!-- Sync MyList -->
                        <Button HorizontalAlignment="Left" Name="btnSyncMyList" Margin="0,0,0,0" Style="{DynamicResource FlatButtonStyle}" Width="Auto">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" >
                                <Image Height="16" Width="16" Source="/Images/32_sync.png" Margin="0,0,5,0"/>
                                <TextBlock VerticalAlignment="Center" Text="{Resx ResxName=JMMServer.Properties.Resources, Key=Actions_SyncMyList}" Margin="0,0,5,0"/>
                            </StackPanel>
                        </Button>

                        <!-- Sync Trakt -->
                        <Button HorizontalAlignment="Left" Name="btnSyncTrakt" Margin="0,0,0,0" Style="{DynamicResource FlatButtonStyle}" Width="Auto">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" >
                                <Image Height="16" Width="16" Source="/Images/32_sync.png" Margin="0,0,5,0"/>
                                <TextBlock VerticalAlignment="Center" Text="{Resx ResxName=JMMServer.Properties.Resources, Key=Actions_SyncTrakt}" Margin="0,0,5,0"/>
                            </StackPanel>
                        </Button>

                        <!-- Sync Votes -->
                        <Button HorizontalAlignment="Left" Name="btnSyncVotes" Margin="0,0,0,0" Style="{DynamicResource FlatButtonStyle}" Width="Auto">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" >
                                <Image Height="16" Width="16" Source="/Images/32_sync.png" Margin="0,0,5,0"/>
                                <TextBlock VerticalAlignment="Center" Text="{Resx ResxName=JMMServer.Properties.Resources, Key=Actions_SyncVotes}" Margin="0,0,5,0"/>
                            </StackPanel>
                        </Button>

                        <!-- Update AniDB Series Info -->
                        <Button HorizontalAlignment="Left" Name="btnUpdateAniDBInfo" Margin="0,0,0,0" Style="{DynamicResource FlatButtonStyle}" Width="Auto">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" >
                                <Image Height="16" Width="16" Source="/Images/32_import.png" Margin="0,0,5,0"/>
                                <TextBlock VerticalAlignment="Center" Text="{Resx ResxName=JMMServer.Properties.Resources, Key=Actions_UpdateAniDB}" Margin="0,0,5,0"/>
                            </StackPanel>
                        </Button>

                        <!-- Update TvDB Info -->
                        <Button HorizontalAlignment="Left" Name="btnUpdateTvDBInfo" Margin="0,0,0,0" Style="{DynamicResource FlatButtonStyle}" Width="Auto">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" >
                                <Image Height="16" Width="16" Source="/Images/32_import.png" Margin="0,0,5,0"/>
                                <TextBlock VerticalAlignment="Center" Text="{Resx ResxName=JMMServer.Properties.Resources, Key=Actions_UpdateTvDB}" Margin="0,0,5,0"/>
                            </StackPanel>
                        </Button>

                        <!-- Update Trakt Info -->
                        <Button HorizontalAlignment="Left" Name="btnUpdateTraktInfo" Margin="0,0,0,0" Style="{DynamicResource FlatButtonStyle}" Width="Auto">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" >
                                <Image Height="16" Width="16" Source="/Images/32_import.png" Margin="0,0,5,0"/>
                                <TextBlock VerticalAlignment="Center" Text="{Resx ResxName=JMMServer.Properties.Resources, Key=Actions_UpdateTrakt}" Margin="0,0,5,0"/>
                            </StackPanel>
                        </Button>

                        <!-- Update All Stats -->
                        <Button HorizontalAlignment="Left" Name="btnUpdateAllStats" Margin="0,0,0,0" Style="{DynamicResource FlatButtonStyle}" Width="Auto">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" >
                                <Image Height="16" Width="16" Source="/Images/32_import.png" Margin="0,0,5,0"/>
                                <TextBlock VerticalAlignment="Center" Text="{Resx ResxName=JMMServer.Properties.Resources, Key=Actions_UpdateAllStats}" Margin="0,0,5,0"/>
                            </StackPanel>
                        </Button>

                        <!-- Update All Video Media Info -->
                        <Button HorizontalAlignment="Left" Name="btnUpdateMediaInfo" Margin="0,0,0,0" Style="{DynamicResource FlatButtonStyle}" Width="Auto">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" >
                                <Image Height="16" Width="16" Source="/Images/32_import.png" Margin="0,0,5,0"/>
                                <TextBlock VerticalAlignment="Center" Text="{Resx ResxName=JMMServer.Properties.Resources, Key=Actions_UpdateAllMediaInfo}" Margin="0,0,5,0"/>
                            </StackPanel>
                        </Button>

                        <!-- btnUploadAzureCache -->
                        <Button HorizontalAlignment="Left" Name="btnUploadAzureCache" Margin="0,0,0,0" Style="{DynamicResource FlatButtonStyle}" Width="Auto" Visibility="Collapsed">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" >
                                <Image Height="16" Width="16" Source="/Images/32_import.png" Margin="0,0,5,0"/>
                                <TextBlock VerticalAlignment="Center" Text="{Resx ResxName=JMMServer.Properties.Resources, Key=Actions_UploadCache}" Margin="0,0,5,0"/>
                            </StackPanel>
                        </Button>

                    </StackPanel>
                </TabItem>

                <!-- Import Folders tab-->
                <TabItem Header="{Resx ResxName=JMMServer.Properties.Resources, Key=Tab_ImportFolders}" Visibility="{Binding Source={x:Static local:ServerState.Instance}, Path=ServerOnline, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <local:ImportFolderAdmin/>
                </TabItem>

                <!-- Settings tab-->
                <TabItem Header="{Resx ResxName=JMMServer.Properties.Resources, Key=Tab_Settings}" Visibility="{Binding Source={x:Static local:ServerState.Instance}, Path=ServerOnline, Converter={StaticResource BooleanToVisibilityConverter}}">
                    
                    <StackPanel Orientation="Vertical">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="5">
                            <TextBlock Text="{Resx ResxName=JMMServer.Properties.Resources, Key=Settings_ServerPort}"  VerticalAlignment="Center"/>
                            <TextBox Name="txtServerPort" Width="100" Margin="10,0,0,0"></TextBox>

                            <Button Name="btnApplyServerPort" Style="{DynamicResource RoundButtonStyle}" Margin="10,0,0,0">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" >
                                    <Image Height="16" Width="16" Source="/Images/32_Save.png" Margin="0,0,5,0"/>
                                    <TextBlock VerticalAlignment="Center" Text="{Resx ResxName=JMMServer.Properties.Resources, Key=Settings_Apply}" Margin="0,0,5,0"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="5,10,5,5">
                            <TextBlock Text="{Resx ResxName=JMMServer.Properties.Resources, Key=Settings_ImagePath}"  VerticalAlignment="Center"/>

                            <ComboBox Name="cboImagesPath" MinWidth="100" Margin="10,0,0,0" VerticalAlignment="Center"/>

                            <Button Name="btnChooseImagesFolder" Style="{DynamicResource RoundButtonStyle}" Margin="10,0,0,0">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" >
                                    <Image Height="16" Width="16" Source="/Images/32_Folder.png" Margin="0,0,5,0"/>
                                    <TextBlock VerticalAlignment="Center" Text="{Resx ResxName=JMMServer.Properties.Resources, Key=Settings_SelectFolder}" Margin="0,0,5,0"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="5,0,5,5">
                            <TextBlock Text="{Binding Source={x:Static local:ServerState.Instance}, Path=BaseImagePath}" Name="txtImagesPath"  VerticalAlignment="Center" Margin="20,0,5,0" Foreground="DarkGray">
                                <TextBlock.ToolTip>
                                    <TextBlock Text="{Binding Source={x:Static local:ServerState.Instance}, Path=BaseImagePath}" Foreground="Black" FontWeight="DemiBold"/>
                                </TextBlock.ToolTip>
                            </TextBlock>
                        </StackPanel>

                        <Button Margin="2,10,2,2" Style="{DynamicResource FlatButtonStyle}" Name="btnMaxOnStartup" Width="180" HorizontalAlignment="Left"
                            Visibility="{Binding Source={x:Static local:ServerState.Instance}, Path=MinOnStartup, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" >
                                <Image Height="16" Width="16" Source="/Images/16_tick.png" Margin="0,0,5,0"/>
                                <TextBlock VerticalAlignment="Center" Text="{Resx ResxName=JMMServer.Properties.Resources, Key=Settings_Minimize}" Margin="0,0,5,0"/>
                            </StackPanel>
                        </Button>

                        <Button Margin="2,10,2,2" Style="{DynamicResource FlatButtonStyle}" Name="btnMinOnStartup" Width="180" HorizontalAlignment="Left"
                            Visibility="{Binding Source={x:Static local:ServerState.Instance}, Path=MaxOnStartup, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" >

                                <TextBlock VerticalAlignment="Center" Text="{Resx ResxName=JMMServer.Properties.Resources, Key=Settings_Minimize}" Foreground="DarkGray" Margin="0,0,5,0"/>
                            </StackPanel>
                        </Button>

                        <Button Margin="2,10,2,2" Style="{DynamicResource FlatButtonStyle}" Name="btnAllowMultipleInstances" Width="180" HorizontalAlignment="Left"
                            Visibility="{Binding Source={x:Static local:ServerState.Instance}, Path=AllowMultipleInstances, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" >
                                <Image Height="16" Width="16" Source="/Images/16_tick.png" Margin="0,0,5,0"/>
                                <TextBlock VerticalAlignment="Center" Text="{Resx ResxName=JMMServer.Properties.Resources, Key=Settings_Multiple}" Margin="0,0,5,0"/>
                            </StackPanel>
                        </Button>

                        <Button Margin="2,10,2,2" Style="{DynamicResource FlatButtonStyle}" Name="btnDisallowMultipleInstances" Width="180" HorizontalAlignment="Left"
                            Visibility="{Binding Source={x:Static local:ServerState.Instance}, Path=DisallowMultipleInstances, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" >
                                <TextBlock VerticalAlignment="Center" Text="{Resx ResxName=JMMServer.Properties.Resources, Key=Settings_Multiple}" Foreground="DarkGray" Margin="0,0,5,0"/>
                            </StackPanel>
                        </Button>

                        <Button Margin="2,10,2,2" Style="{DynamicResource FlatButtonStyle}" Name="btnUpdateAniDBLogin" HorizontalAlignment="Left" IsEnabled="True" VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                                <TextBlock VerticalAlignment="Center" Text="{Resx ResxName=JMMServer.Properties.Resources, Key=Settings_AniDB}" Margin="0,0,5,0"/>
                            </StackPanel>
                        </Button>

                        <Button Margin="2,10,2,2" Style="{DynamicResource FlatButtonStyle}" Name="btnJMMStartWithWindows" HorizontalAlignment="Left" IsEnabled="True" VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                               <!-- <Image Height="16" Width="16" Source="/Images/16_arrow45.png" Margin="0,0,5,0"/> -->
                                <TextBlock VerticalAlignment="Center" Text="{Resx ResxName=JMMServer.Properties.Resources, Key=Settings_Windows}" Margin="0,0,5,0"/>
                            </StackPanel>
                        </Button>

                        <StackPanel Orientation="Horizontal">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="8,10,2,2">
                                <CheckBox Name="chkEnablePlex" Margin="0,0,6,0" VerticalAlignment="Center" IsChecked="True"/>
                                <TextBlock VerticalAlignment="Center" Text="{Resx ResxName=JMMServer.Properties.Resources, Key=EnablePlex}" Margin="0,0,0,0"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="8,10,2,2">
                                <CheckBox Name="chkEnableKodi" Margin="0,0,6,0" VerticalAlignment="Center" IsChecked="True"/>
                                <TextBlock VerticalAlignment="Center" Text="{Resx ResxName=JMMServer.Properties.Resources, Key=EnableKodi}" Margin="0,0,0,0"/>
                            </StackPanel>
                        </StackPanel>

                        

                    </StackPanel>
                </TabItem>
                <TabItem Header="MyAnime2 Migration" Visibility="Collapsed">
                    <StackPanel Orientation="Vertical" VerticalAlignment="Top" Margin="0">
                        <Border Style="{DynamicResource ToolbarBorderControlStyle}" Background="#F1F1F1" Margin="0,0,0,5" Padding="5">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="25"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Image Height="16" Width="16" Source="/Images/32_info.png" Margin="5,2,5,0" Grid.Column="0" VerticalAlignment="Top"/>
                                <TextBlock VerticalAlignment="Center" Text="Use this to import manually linked files from MyAnime2" Margin="0,0,5,0" TextWrapping="Wrap" Grid.Column="1"/>
                                <local:HyperLinkStandard VerticalAlignment="Center" Margin="10,0,0,0" DisplayText="More Info Here" Grid.Column="2"
                                                                        URL="http://jmediamanager.org/"/>
                            </Grid>
                        </Border>

                        <!-- Import MyAnime2 -->
                        <Button HorizontalAlignment="Left" Name="btnImportManualLinks" Margin="0,0,0,0" Style="{DynamicResource RoundButtonStyle}" Width="Auto">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" >
                                <Image Height="16" Width="16" Source="/Images/32_import.png" Margin="0,0,5,0"/>
                                <TextBlock VerticalAlignment="Center" Text="Select MA2 database file and start processing" Margin="0,0,5,0"/>
                            </StackPanel>
                        </Button>

                        <TextBlock Name="txtMA2Progress" Text="Processing files..." Margin="5,5,0,0" Visibility="Hidden"  />

                        <TextBlock Name="txtMA2Success" Text="0 Files Done" Margin="5,5,0,0" Visibility="Hidden" />
                    </StackPanel>
                </TabItem>

                <!-- Setup tab-->
                <TabItem Header="{Resx ResxName=JMMServer.Properties.Resources, Key=Tab_Setup}">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" Margin="5,5,5,10">
                            <TextBlock Text="{Binding Source={x:Static local:ServerState.Instance}, Path=CurrentSetupStatus}" FontWeight="DemiBold"  VerticalAlignment="Center"></TextBlock>
                        </StackPanel>

                        <!-- Database type combo-->
                        <TextBlock Text="{Resx ResxName=JMMServer.Properties.Resources, Key=Setup_DatabaseType}" Grid.Column="0" Grid.Row="1" VerticalAlignment="Center" Margin="5,5,5,5"></TextBlock>

                        <ComboBox Name="cboDatabaseType" VerticalAlignment="Center" Grid.Column="1" Grid.Row="1" Margin="5,5,5,5" IsEnabled="False"></ComboBox>


                        <!-- SQLITE details-->

                        <!-- SQL Server details-->

                        <TextBlock Text="{Resx ResxName=JMMServer.Properties.Resources, Key=Setup_ServerAddress}" Grid.Column="0" Grid.Row="2" VerticalAlignment="Center" Margin="5,5,5,0"
                                   Visibility="{Binding Source={x:Static local:ServerState.Instance}, Path=DatabaseIsSQLServer, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="2" 
                                    Visibility="{Binding Source={x:Static local:ServerState.Instance}, Path=DatabaseIsSQLServer, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <ComboBox Name="cboMSSQLServerList"  IsEditable="True" MinWidth="150" Margin="5,5,5,5" VerticalAlignment="Center"/>
                            <Button Name="btnRefreshMSSQLServerList" Margin="10,5,2,5"  HorizontalAlignment="Left" IsEnabled="False" VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                                    <Image Height="16" Width="16" Source="/Images/32_Refresh.png" Margin="0,0,5,0"/>
                                    <TextBlock VerticalAlignment="Center" Text="{Resx ResxName=JMMServer.Properties.Resources, Key=Setup_Refresh}" Margin="0,0,5,0"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>

                        <TextBlock Text="{Resx ResxName=JMMServer.Properties.Resources, Key=Setup_DatabaseName}" Grid.Column="0" Grid.Row="3" VerticalAlignment="Center" Margin="5,5,5,0"
                                   Visibility="{Binding Source={x:Static local:ServerState.Instance}, Path=DatabaseIsSQLServer, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        <TextBox Name="txtMSSQL_DatabaseName" Width="150" Grid.Column="1" Grid.Row="3" Margin="5,5,5,0" VerticalAlignment="Center" HorizontalAlignment="Left"
                                 Visibility="{Binding Source={x:Static local:ServerState.Instance}, Path=DatabaseIsSQLServer, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                        <TextBlock Text="{Resx ResxName=JMMServer.Properties.Resources, Key=Setup_Username}" Grid.Column="0" Grid.Row="4" VerticalAlignment="Center" Margin="5,5,5,0"
                                   Visibility="{Binding Source={x:Static local:ServerState.Instance}, Path=DatabaseIsSQLServer, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        <TextBox Name="txtMSSQL_Username" Width="150" Grid.Column="1" Grid.Row="4" Margin="5,5,5,0" VerticalAlignment="Center" HorizontalAlignment="Left"
                                 Visibility="{Binding Source={x:Static local:ServerState.Instance}, Path=DatabaseIsSQLServer, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                        <TextBlock Text="{Resx ResxName=JMMServer.Properties.Resources, Key=Setup_Password}" Grid.Column="0" Grid.Row="5" VerticalAlignment="Center" Margin="5,5,5,0"
                                   Visibility="{Binding Source={x:Static local:ServerState.Instance}, Path=DatabaseIsSQLServer, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        <PasswordBox Name="txtMSSQL_Password" Width="150" Grid.Column="1" Grid.Row="5" Margin="5,5,5,0" VerticalAlignment="Center" HorizontalAlignment="Left"
                                     Visibility="{Binding Source={x:Static local:ServerState.Instance}, Path=DatabaseIsSQLServer, Converter={StaticResource BooleanToVisibilityConverter}}"/>


                        <!-- MySQL details-->

                        <TextBlock Text="{Resx ResxName=JMMServer.Properties.Resources, Key=Setup_ServerAddress}" Grid.Column="0" Grid.Row="2" VerticalAlignment="Center" Margin="5,5,5,0"
                                   Visibility="{Binding Source={x:Static local:ServerState.Instance}, Path=DatabaseIsMySQL, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        <TextBox Name="txtMySQL_ServerAddress" Width="150" Grid.Column="1" Grid.Row="2" Margin="5,5,5,0" VerticalAlignment="Center" HorizontalAlignment="Left"
                                 Visibility="{Binding Source={x:Static local:ServerState.Instance}, Path=DatabaseIsMySQL, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                        <TextBlock Text="{Resx ResxName=JMMServer.Properties.Resources, Key=Setup_DatabaseName}" Grid.Column="0" Grid.Row="3" VerticalAlignment="Center" Margin="5,5,5,0"
                                   Visibility="{Binding Source={x:Static local:ServerState.Instance}, Path=DatabaseIsMySQL, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        <TextBox Name="txtMySQL_DatabaseName" Width="150" Grid.Column="1" Grid.Row="3" Margin="5,5,5,0" VerticalAlignment="Center" HorizontalAlignment="Left"
                                 Visibility="{Binding Source={x:Static local:ServerState.Instance}, Path=DatabaseIsMySQL, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                        <TextBlock Text="{Resx ResxName=JMMServer.Properties.Resources, Key=Setup_Username}" Grid.Column="0" Grid.Row="4" VerticalAlignment="Center" Margin="5,5,5,0"
                                   Visibility="{Binding Source={x:Static local:ServerState.Instance}, Path=DatabaseIsMySQL, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        <TextBox Name="txtMySQL_Username" Width="150" Grid.Column="1" Grid.Row="4" Margin="5,5,5,0" VerticalAlignment="Center" HorizontalAlignment="Left"
                                 Visibility="{Binding Source={x:Static local:ServerState.Instance}, Path=DatabaseIsMySQL, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                        <TextBlock Text="{Resx ResxName=JMMServer.Properties.Resources, Key=Setup_Password}" Grid.Column="0" Grid.Row="5" VerticalAlignment="Center" Margin="5,5,5,0"
                                   Visibility="{Binding Source={x:Static local:ServerState.Instance}, Path=DatabaseIsMySQL, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        <PasswordBox Name="txtMySQL_Password" Width="150" Grid.Column="1" Grid.Row="5" Margin="5,5,5,0" VerticalAlignment="Center" HorizontalAlignment="Left"
                                     Visibility="{Binding Source={x:Static local:ServerState.Instance}, Path=DatabaseIsMySQL, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                        <!-- Save and Start Server -->

                        <Button Name="btnSaveDatabaseSettings" Margin="5,8,2,2" Grid.Column="1" Grid.Row="6"  HorizontalAlignment="Left" IsEnabled="False">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                                <Image Height="16" Width="16" Source="/Images/32_save.png" Margin="0,0,5,0"/>
                                <TextBlock VerticalAlignment="Center" Text="{Resx ResxName=JMMServer.Properties.Resources, Key=Setup_SaveStart}" Margin="0,0,5,0"/>
                            </StackPanel>
